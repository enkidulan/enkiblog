# pserve and command line configuration for a local development machine

[includes]
include_ini_files =
    ${config_file:include_ini_file}
    resource://enkiblog/conf/base.ini
    resource://websauna/conf/base.ini

[app:main]
websauna.site_id = ${config_file:site_id}
websauna.site_email_prefix = ${config_file:site_email_prefix}
sqlalchemy.url = ${config_file:sqlalchemy_url}
websauna.secrets_file = ${config_file:websauna_secrets_file}

[alembic]
# path to migration scripts
script_location = ${buildout:directory}/src/enkiblog/alembic
